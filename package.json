  "author": "Reese",
  "license": "MIT",
  "devDependencies": {
    "jest": "^29.7.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5"
  },
  "dependencies": {
    "child_process": "^1.0.2",
    "fs": "^0.0.1-security",
    "path": "^0.12.7"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/src/tests/unit/**/*.test.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/claude-code-windows-installer.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/claude-code-windows-installer/issues"
